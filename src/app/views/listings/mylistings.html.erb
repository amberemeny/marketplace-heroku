<p id="notice"><%= notice %></p>

<h1 id="table-title">My Listings</h1>

<table id= "mylistings">
  <thead>
    <tr>
      <th id= "image">Image</th>
      <th>Name</th>
      <th>Species</th>
      <th>Price</th>
      <th colspan="3"><%= link_to 'New Listing', new_listing_path %></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td id="image">
          <% if listing.image != nil %>
            <%= image_tag listing.image, width: 200 %>
          <% end %>
        </td>
        <td><%= listing.name %></td>
        <td><%= listing.species %></td>
        <td><%= number_to_currency listing.price %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
